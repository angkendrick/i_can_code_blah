<h1>Tutorials/index</h1>

<%= form_tag search_path, method: :get do %>
    <div>
      <%= text_field_tag 'search_string' %><%= submit_tag 'Search' %>
    </div>
<% end %>

<br>

<% @tutorials.each do |tutorial| %>
    <div><%= tutorial.name %></div></br>
    <div><%= tutorial.description %></div></br>
    <div><a href="<%= tutorial.url %>"><%= tutorial.url %></a></div></br>
    <div><img src="<%= tutorial.image %>"></div></br>
    <div><%= tutorial.cost %></div></br>
    <div><%= tutorial.difficulty%></div></br>
    <div><%= tutorial.format %></div></br>
    <div><%= tutorial.company %></div></br>
    <div><%= link_to 'view', tutorial_path(tutorial) %></div>
    <div><%= link_to 'edit', edit_tutorial_path(tutorial) %></div>
    <div><%= link_to 'delete', tutorial_path(tutorial), method: :delete, data: {confirm: 'You sure?'} %></div>
    <hr>
<% end %>